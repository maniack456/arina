<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://progectBrowse.caption"
        focusComponent="progectsTable"
        messagesPack="com.company.arina.web.screens.progect">
    <data readOnly="true">
        <collection id="progectsDc"
                    class="com.company.arina.entity.Progect">
            <view extends="_local">
                <property name="manager" view="_minimal">
                    <property name="firstName"/>
                    <property name="lastName"/>
                    <property name="email"/>
                    <property name="active"/>
                </property>
            </view>
            <loader id="progectsDl">
                <query>
                    <![CDATA[select e from arina_Progect e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="progectsTable"
            spacing="true">
        <filter id="filter"
                applyTo="progectsTable"
                dataLoader="progectsDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="progectsTable"
                    width="100%"
                    dataContainer="progectsDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="name"/>
                <column id="startDate"/>
                <column id="endDate"/>
                <column id="manager"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="progectsTable.create"/>
                <button id="editBtn" action="progectsTable.edit"/>
                <button id="removeBtn" action="progectsTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
