<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://progectEdit.caption"
        focusComponent="form"
        messagesPack="com.company.arina.web.screens.progect">
    <data>
        <instance id="progectDc"
                  class="com.company.arina.entity.Progect">
            <view extends="_local">
                <property name="manager" view="_minimal">
                    <property name="firstName"/>
                    <property name="lastName"/>
                    <property name="email"/>
                    <property name="active"/>
                </property>
                <property name="tasks" view="_minimal">
                    <property name="startDate"/>
                    <property name="estimatedEfforts"/>
                </property>
            </view>
            <loader/>
            <collection id="tasksDc" property="tasks"/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="progectDc">
            <column width="350px">
                <textField id="nameField" property="name"/>
                <dateField id="startDateField" property="startDate"/>
                <dateField id="endDateField" property="endDate"/>
                <pickerField id="managerField" property="manager">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
            </column>
        </form>
        <groupBox id="tasksBox" caption="msg://com.company.arina.entity/Progect.tasks">
            <table id="tasksTable" dataContainer="tasksDc" width="100%" height="200px">
                <actions>
                    <action id="create" type="create"/>
                    <action id="edit" type="edit"/>
                    <action id="remove" type="remove"/>
                </actions>
                <columns>
                    <column id="name"/>
                    <column id="startDate"/>
                    <column id="estimatedEfforts"/>
                </columns>
                <buttonsPanel>
                    <button action="tasksTable.create"/>
                    <button action="tasksTable.edit"/>
                    <button action="tasksTable.remove"/>
                </buttonsPanel>
            </table>
        </groupBox>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
