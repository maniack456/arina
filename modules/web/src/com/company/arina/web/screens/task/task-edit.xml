<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://taskEdit.caption"
        focusComponent="form"
        messagesPack="com.company.arina.web.screens.task">
    <data>
        <instance id="taskDc"
                  class="com.company.arina.entity.Task">
            <view extends="_local">
                <property name="assignee" view="_minimal">
                    <property name="firstName"/>
                    <property name="lastName"/>
                    <property name="email"/>
                    <property name="active"/>
                </property>
                <property name="progect" view="_minimal">
                    <property name="startDate"/>
                    <property name="endDate"/>
                </property>
            </view>
            <loader/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="taskDc">
            <column width="350px">
                <textField id="nameField" property="name"/>
                <pickerField id="assigneeField" property="assignee">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
                <dateField id="startDateField" property="startDate"/>
                <textField id="estimatedEffortsField" property="estimatedEfforts"/>
                <pickerField id="progectField" property="progect">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
